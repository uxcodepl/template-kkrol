<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="2.5" type="template" client="site" method="upgrade">
	
	<name>Template kkrol</name><!-- name the template -->
	<creationDate>xxxx-xx-xx</creationDate><!-- the date your are beginn to code -->
	<author>Krzysztof Król</author><!-- your name (oops, I repeat myself) -->
	<copyright>Krzysztof Król</copyright><!-- for who you are coding -->
	<authorEmail>kkrol@o2.pl</authorEmail><!-- your email address -->
	<authorUrl></authorUrl><!-- your url -->
	<version>1.0.0</version><!-- give your template a number -->
	<description><![CDATA[ 
		<h1>frontend</h1>
		<p>Created by <a href="http://uxcode.pl" target="_blank">Krzysztof Król | uxcode.pl</a>.</p>
	]]></description><!-- change the description as you like -->
	
	<files><!-- no need to change -->
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>logic.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<positions><!-- define the positions for modules here -->
		<position>menu</position>
		<position>submenu</position>
		<position>debug</position>
		<position>breadcrumbs</position>
		<position>language-switcher</position>
		<position>cookie</position>
	</positions>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_kkrol.ini</language>
		<language tag="pl-PL">pl-PL/pl-PL.tpl_kkrol.ini</language>
	</languages>


</extension>
